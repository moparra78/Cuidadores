<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBECEC"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="-73dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#595555"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/acerca"
            app:title="Cuidadores "
            app:titleTextColor="#FDFCFC" />

    </LinearLayout>

    <TextView
        android:id="@+id/texto1"
        android:layout_width="245dp"
        android:layout_height="114dp"
        android:fontFamily="@font/andika"
        android:justificationMode="inter_word"
        android:text="Cuidadores es una aplicación de guianza y acompañamiento a personas que cuidan pacientes de Alzheimer "
        android:textAllCaps="false"
        android:textColor="#2C2A2A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.18" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"
        android:layout_height="175dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/imagen1" />

    <Button
        android:id="@+id/inicio"
        android:layout_width="148dp"
        android:layout_height="41dp"
        android:background="#595555"
        android:fontFamily="@font/andika"
        android:text="Iniciar"
        android:textAllCaps="false"
        android:textColor="#FDFCFC"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="142dp"
        android:layout_height="23dp"
        android:fontFamily="@font/andika"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="©Cuidadores "
        android:textAllCaps="false"
        android:textColor="#2C2A2A"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio"
        app:layout_constraintVertical_bias="0.23000002" />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="142dp"
        android:layout_height="23dp"
        android:fontFamily="@font/andika"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="2020"
        android:textAllCaps="false"
        android:textColor="#2C2A2A"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnsiguiente1"
        android:layout_width="80dp"
        android:layout_height="27dp"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:background="#595555"
        android:fontFamily="@font/andika"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="#FDFCFC"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>